<h1>Portfolio items</h1>

<%= link_to "Create a new portfolio item", new_portfolio_url  %>
</br>
</br>
</br>

<% @portfolio_items.each do |portfolio_item| %>
  <b><%=link_to portfolio_item.title, portfolio_path(portfolio_item) %></b>
  <p><%=portfolio_item.subtitle %></p>
  <p><%=portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%></br>
  <%= link_to "Edit", edit_portfolio_path(portfolio_item)  %></br>
  <td><%= link_to 'Destroy', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </br>
  </br>
  </br>
<% end %>
